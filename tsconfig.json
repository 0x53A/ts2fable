{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "sourceMap": true,
        "outDir": "dist",
        "lib": [
            "es2015",
            "es2015.promise",
            "dom"
        ],
        "forceConsistentCasingInFileNames": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictNullChecks": true,
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "alwaysStrict": true,
        "importHelpers": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "/node_modules/**"
    ]
}